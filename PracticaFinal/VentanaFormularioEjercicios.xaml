<Window x:Class="PracticaFinal.VentanaFormularioEjercicios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaFinal"
        mc:Ignorable="d"
            Height="270" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <Label>Nombre del ejercicio:</Label>
            <TextBox x:Name="NombreTextBox" />
            <Label>Descripcion del ejercicio:</Label>
            <TextBox x:Name="DescripcionTextBox" />
            <Label>Grupo Muscular:</Label>
            <ComboBox x:Name="GruposMuscularesComboBox">
                <ComboBoxItem Content="Core" />
                <ComboBoxItem Content="Pecho" />
                <ComboBoxItem Content="Brazos" />
                <ComboBoxItem Content="Piernas" />
                <ComboBoxItem Content="Espalda" />
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="50">
                <Button Content="Aceptar" Width="75" Margin="5" Click="Aceptar_Click" />
                <Button Content="Cancelar" Width="75" Margin="5" Click="Cancelar_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
